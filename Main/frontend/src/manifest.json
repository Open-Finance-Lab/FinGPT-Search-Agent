{
  "manifest_version": 3,
  "name": "Agentic FinSearch",
  "version": "0.8.3",
  "description": "Agentic FinSearch companion extension. Defaults to the hosted backend at agenticfinsearch.org, with optional local backend support.",
  "icons": {
    "16": "assets/16x16_icon.png",
    "32": "assets/32x32_icon.png",
    "48": "assets/48x48_icon.png",
    "128": "assets/128x128_icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bloomberg.com/*",
        "https://finance.yahoo.com/*",
        "https://cdm.finos.org/*",
        "https://www.finos.org/*",
        "https://mathcup.com/*",
        "https://www.cnbc.com/*"
      ],
      "js": [
        "vendor/marked.min.js",
        "vendor/katex.min.js",
        "vendor/katex-auto-render.min.js",
        "main.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://agenticfinsearch.org/*",
    "https://www.agenticfinsearch.org/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "fonts/*.woff", "fonts/*.woff2", "assets/*.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
