# Django configuration
DJANGO_SETTINGS_MODULE=django_config.settings_prod
DJANGO_SECRET_KEY=replace-with-a-long-random-value
DJANGO_ALLOWED_HOSTS=api.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,chrome-extension://your-extension-id,chrome-extension://your-extension-id,http://localhost:3000,https://finance.yahoo.com,https://www.bloomberg.com,https://cdm.finos.org,https://www.finos.org,https://mathcup.com,https://www.cnbc.com
DJANGO_DEBUG=False

# Security hardening
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Runtime behaviour
RUN_COLLECTSTATIC=1
API_RATE_LIMIT=600/h
MCP_SERVER_URL=https://mcp.your-domain.com/sse

# Model provider credentials
OPENAI_API_KEY=
DEEPSEEK_API_KEY=
ANTHROPIC_API_KEY=
BUFFET_AGENT_API_KEY=

# Optional overrides
BUFFET_AGENT_ENDPOINT=https://your-custom-endpoint
BUFFET_AGENT_TIMEOUT=60
